	shared_pods
	kakao_pods
	
end

target "Onboarding" do
	project "Onboarding/Onboarding.project"
	shared_pods
end

target "Login" do
	project "Login/Login.project"
	shared_pods
	kakao_pods
end

target "Home" do
	project "Home/Home.project"
	shared_pods
end

