use_frameworks!

workspace 'mineme'
project 'MinemeApp/MinemeApp.project'
project 'Onboarding/Onboarding.project'
project 'Login/Login.project'
project 'Home/Home.project'
project 'Story/Story.project'
project 'Setting/Setting.project'
